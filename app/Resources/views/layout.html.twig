{# app/Resources/views/layout.html.twig #}
{# Le layout général #}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		
		<title>{% block title %}Kaiim Plateforme{% endblock %}</title>
		
		{% block stylesheets %}
			{# On charge le CSS de bootstrap depuis le site directement #}
			<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
		{% endblock %}
	</head>
	
	<body>
		<div class="container">
		
			<div id="header" class="jumbotron">
				<h1>Ma plateforme d'annonces</h1>
				<p>
					Platforme réaliser avec Symfony2...
				</p>
				<p>
					<a class="btn btn-primary btn-lg" href="#">
						Lire plus »
					</a>
				</p>
			</div>
			
			<div class="row">
				<div id="menu" class="col-md-3">
					<h3>Les annonces</h3>
					<ul class="nav nav-pills nav-stacked">
						{# utilisation de la fonction path pour faire des liens vers d'autres routes #}
						<li><a href="{{ path('kaiim_platform_home') }}">Accueil</a></li>
						<li><a href="{{ path('kaiim_platform_add') }}">Ajouter une annonce</a></li>
					</ul>
					
					<h4>Dernières annonces</h4>
					{# inclusion de la méthode menu du contrôleur Advert du bundle KaiimPlatformBundle, avec l'argument nombre défini à 3 #}
					{{ render(controller("KaiimPlatformBundle:Advert:menu", {'limit': 3})) }}
				</div>
				<div id="content" class="col-md-9">
					{% block body %}
					{% endblock %}
				</div>
			</div>
			
			<hr>
			
			<footer>
				<p>© {{ 'now'|date('Y') }} Karim FATHI</p>
			</footer>
		</div>
		
		{% block javascripts %}
			{# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
			<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
			<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
		{% endblock %}
		
	</body>
</html>